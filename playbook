---
- name:  update the  web server
  hosts:  192.168.1.85
  remote_user: root
  tasks:  
      - name:   apache  is the latest  version 
        ansible.builtin.yum: 
             name: httpd
             state: latest
      - name: to write the configuration 
        ansible.builtin.template:
             name: /srv/httpd.j2
             dest: /etc/httpd.conf
        
             
